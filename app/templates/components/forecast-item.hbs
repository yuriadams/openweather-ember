<div class="widget">
  <div>
    <img src={{ concat 'http://openweathermap.org/img/w/' item.weather.0.icon '.png' }} width="64px" height="64px" style="float: left;">
    <div style="padding-left:10px;float:left">
      <div>
        <div style="float:left;margin-top:-3px;font-size:60px">
          <span style="display:inline">{{item.temp.eve}}</span>
        </div>
        <div style="float:left;font-size:16px;margin-top:6px">
          <span style="display:inline" aria-label="°Celsius">°C</span>
        </div>
      </div>
    </div>
  </div>

  <div style="clear:both"></div>
  <div>{{format-date item.dt}}</div>
</div>
